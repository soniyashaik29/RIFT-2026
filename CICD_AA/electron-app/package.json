{
    "name": "cicd-healing-agent",
    "version": "1.0.0",
    "description": "RIFT 2026 – Autonomous CI/CD Healing Agent Desktop App",
    "main": "main.js",
    "author": "RIFT ORGANISERS",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "electron .",
        "dev": "NODE_ENV=development electron .",
        "dist": "electron-builder",
        "pack": "electron-builder --dir"
    },
    "dependencies": {
        "electron-updater": "^6.1.8"
    },
    "devDependencies": {
        "electron": "^30.0.2",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.rift2026.cicd-healing-agent",
        "productName": "RIFT CI-CD Healing Agent",
        "copyright": "© 2026 RIFT ORGANISERS",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "files": [
            "main.js",
            "preload.js",
            "assets/**",
            "!node_modules/**"
        ],
        "extraResources": [
            {
                "from": "../backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!cloned_repos/**",
                    "!__pycache__/**",
                    "!*.pyc"
                ]
            },
            {
                "from": "../frontend-react/build",
                "to": "frontend-react/build"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "license": "LICENSE",
            "shortcutName": "RIFT CI-CD Healing Agent"
        },
        "publish": null
    }
}